<h1>All my tasks</h1>
<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fas fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
      .
      <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>


<%= link_to "Add a new task", tasks_new_path %>
